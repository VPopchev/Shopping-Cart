{% extends 'base.html.twig' %}
{% block body %}
    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            <h3>{{ msg }}</h3>
        </div>
    {% endfor %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('edit_product',{'id': product.id}) }}" method="post">
                <fieldset>
                    <legend>Create Product</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" value="{{ product.name }}" class="form-control" id="product_name"
                                   placeholder="Name"
                                   name="product[name]">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Description</label>
                        <div class="col-sm-4 ">
                            <textarea class="form-control" id="product_description" placeholder="Name"
                                      name="product[description]">{{ product.description }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="product_categoryId">Category</label>
                        <div class="col-sm-4">
                            <select class="form-control" name="product[categoryId]" id="product_categoryId">
                                {% for category in categories %}
                                    <option {{ category.id == product.category.id ? 'selected="selected"':'' }}
                                            value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="product_status">Status</label>
                        <div class="col-sm-4">
                            <select class="form-control" name="product[status]" id="product_status">
                                <option {{ product.status == 'Active' ? 'selected="selected"' : '' }}
                                        value="Active">Active</option>
                                <option {{ product.status == 'Inactive' ? 'selected="selected"':'' }}
                                        value="Inactive">Inactive
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="_quantity">Quantity</label>
                        <div class="col-sm-4">
                            <input type="number" min="1" max="1000" value="{{ product.quantity }}" class="form-control"
                                   name="product[quantity]" id="_quantity"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4" for="_price">Price</label>
                        <div class="col-sm-4">
                            <input type="number" min="0" value="{{ product.price }}" step="0.01" class="form-control"
                                   name="product[price]"
                                   id="_price"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="">Cancel</a>
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>
                    {{ form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}