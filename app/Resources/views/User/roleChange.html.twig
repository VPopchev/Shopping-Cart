{% extends 'base.html.twig' %}
{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('edit_roles_action',{'id': user.id}) }}" method="post">
                <fieldset>
                    <legend>Register</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Email</label>
                        <div class="col-sm-4 ">
                            <input value="{{ user.email }}" class="form-control" id="user_email" placeholder="Email"
                                   name="user[email]"
                                    required type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_userName">Username</label>
                        <div class="col-sm-4 ">
                            <input value="{{ user.username }}" class="form-control" id="user_userName"
                                   placeholder="Username"
                                   name="user[username]"
                                   required
                                   type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_firstName">First Name</label>
                        <div class="col-sm-4 ">
                            <input value="{{ user.firstName }}" type="text" class="form-control" id="user_firstName"
                                   placeholder="First Name"
                                   name="user[firstName]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_last_name">Last Name</label>
                        <div class="col-sm-4 ">
                            <input  value="{{ user.lastName }}" type="text" class="form-control" id="user_last_name"
                                    placeholder="Last Name"
                                   name="user[lastName]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_roles">Change Role</label>
                        <div class="col-sm-4 ">
                            <select name="role" class="form-control" multiple="multiple" id="user_roles" >
                                <option {{ user.isEditor() ? 'selected': '' }} value="ROLE_EDITOR">Editor</option>
                                <option {{ user.isAdmin() ? 'selected': '' }} value="ROLE_ADMIN">Admin</option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" name="user[password]" value="{{ user.password }}">
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('view_user_profile', {'id': user.id, 'page': 1})
                            }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
                {{  form_row(form._token) }}
            </form>
        </div>
    </div>
{% endblock %}