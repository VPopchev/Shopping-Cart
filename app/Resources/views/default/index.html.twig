{% extends 'base.html.twig' %}

{% block main %}
    {% if app.user %}
        <h1>Hello, {{ app.user.firstName }}!</h1>
    {% else %}
        <h1>Hello Guest!</h1>
    {% endif %}
    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            <h3>{{ msg }}</h3>
        </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            <h3>{{ msg }}</h3>
        </div>
    {% endfor %}


    <div class="dropdown">
        <button type="button" class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown">
            <span class="caret"></span>Categories
        </button>
        <ul class="dropdown-menu">
            {% for category in categories %}
                <li><a href="{{ path('category_list',{'id':category.id}) }}">{{ category.name }}</a></li>
            {% endfor %}
            {% if app.user and (app.user.isAdmin() or app.user.isEditor()) %}
                <li><a href="{{ path('manage_categories') }}">Manage Categories</a></li>
            {% endif %}
        </ul>
    </div>

    <div class="row">
    {% for product in products %}
        <div class="col-lg-5">
            <article >
                <header>
                    <h2 style="text-align: center">{{ product.name }}</h2>
                    <h4>Category: {{ product.category.name }}</h4>
                </header>

                <p style="border: solid;border-radius: 3px">
                    Description: {{ product.description }}
                </p>

                <footer style="text-align: center">
                    <b>Price: {{ product.price|number_format(2) }}лв.</b>
                </footer>
                <small class="author">
                    Quantity: {{ product.quantity }}<br/>
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs"
                           href="{{ path('view_product', {'id': product.id}) }}">View product &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    {% endfor %}
    </div>
    <div class="bottom">
        {% if paginator.hasPrevious %}
            <a href="?p=1">First</a> §§
            <a href="?p={{ paginator.currentPage - 1 }}">Previous</a> |
        {% endif %}
        {% for i in 1..paginator.allPages %}
            {% if paginator.currentPage == i %}
                {{ i }}
            {% else %}
                <a href="?p={{ i }}">{{ i }}</a>
            {% endif %}
        {% endfor %}
        {% if paginator.hasNext %}
            <a href="?p={{ paginator.currentPage + 1 }}">Next</a> §§
            <a href="?p={{ paginator.allPages }}">Last</a>
        {% endif %}
    </div>
{% endblock %}


